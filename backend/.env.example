# NASA POWER API Configuration
NASA_BASE_URL=https://power.larc.nasa.gov/api/temporal/daily/point
NASA_COMMUNITY=AG
NASA_FORMAT=CSV
NASA_TIMEOUT=45.0

# Data Collection Parameters
START_YEAR=2000
NASA_PARAMETERS=T2M_MAX,T2M_MIN,T2M,PRECTOTCORR,WS2M,RH2M

# Analysis Thresholds
RAIN_THRESHOLD_MM=1.0
PERCENTILE_COLD=25
PERCENTILE_HOT=75
PERCENTILE_DRY=25
PERCENTILE_HUMID=75

# Data Quality Thresholds
GOOD_DATA_MIN_YEARS=20
LIMITED_DATA_MIN_YEARS=10
HIGH_CONFIDENCE_MIN_YEARS=25
MEDIUM_CONFIDENCE_MIN_YEARS=15

# Temperature Variability Classification Thresholds
TEMP_CV_VERY_CONSISTENT=5
TEMP_CV_CONSISTENT=10
TEMP_CV_MODERATE=15

# Temperature Trend Thresholds (Â°C per year)
TEMP_TREND_STABLE_THRESHOLD=0.01

# API Configuration
API_VERSION=v1
API_TITLE=Vai Chover no Meu Desfile? API
API_DESCRIPTION=Provides historical climate analysis for a specific date and location.

# CORS Configuration
CORS_ORIGINS=http://localhost,http://localhost:3000,http://localhost:5173,http://127.0.0.1:5500
